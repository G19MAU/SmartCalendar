<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#013e87" /> <!-- Choose your desired border color -->

    <!-- Rounded corners -->
    <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->

    <!-- Optional: Padding inside the EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>